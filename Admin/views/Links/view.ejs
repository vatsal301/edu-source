<%- include('../layouts/Header'); %>

    <div class="card">
        <div class="card-header py-3">
            <div class="row align-items-center m-0">
                <span id="message" class="text-danger lead">
                    <%= messageView %>
                </span>
            </div>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table align-middle table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Link</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i=0; i < links.length; i++) { %>
                            <tr>
                                <td>
                                    <%=i+1%>
                                </td>
                                <td class="productlist">
                                    <a class="d-flex align-items-center gap-2" href="#">
                                        <div>
                                            <h6 class="mb-0 product-title">
                                                <%= links[i].name %>
                                            </h6>
                                        </div>
                                    </a>
                                </td>
                                <td class="productlist">
                                    <a class="d-flex align-items-center gap-2" href="#">
                                        <div>
                                            <h6 class="mb-0 product-title">
                                               <a href="<%= links[i].link %>" target="_blank"> <%= links[i].link %></a> 
                                            </h6>
                                        </div>
                                    </a>
                                </td>
                                <td>
                                    <% if(links[i].status){ %>
                                        <span class="badge rounded-pill alert-success">Active</span>
                                        <% } else{ %>
                                            <span class="badge rounded-pill alert-danger">Disabled</span>
                                            <% } %>
                                </td>
                                <!-- <td><span onload="myDate('<%= links[i].createdAt %>')"> 5-31-2020
                                    </span></td> -->
                                <td>
                                    <div class="d-flex align-items-center gap-3 fs-6">
                                        <a href="/links/edit/<%= links[i]._id %>" class="text-warning" data-bs-toggle="tooltip"
                                            data-bs-placement="bottom" title="" data-bs-original-title="Edit info"
                                            aria-label="Edit"><i class="bi bi-pencil-fill"></i></a>
                                        <a href="/links/delete/<%= links[i]._id %>" class="text-danger"
                                            data-bs-toggle="tooltip" data-bs-placement="bottom" title=""
                                            data-bs-original-title="Delete" aria-label="Delete"><i
                                                class="bi bi-trash-fill"></i></a>
                                    </div>
                                </td>
                            </tr>

                            <% } %>
                    </tbody>
                </table>
            </div>

            <!-- <nav class="float-end mt-4" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav> -->

        </div>
    </div>
    <%- include('../layouts/Footer'); %>
        <script>
            setTimeout(() => {
                document.getElementById("message").innerHTML = ""
            }, 3000);

            function myDate(val) {
                let d = new Date(val);
                let str = d.getDate + "/" + (d.getMonth + 1) + "/" + d.getFullYear;
                return str;
            }
        </script>