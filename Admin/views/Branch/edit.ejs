<%- include('../layouts/Header'); %>
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="card">
                <div class="card-header py-3 bg-transparent">
                    <h5 class="mb-0">Edit Branch</h5>
                </div>
                <div class="card-body">
                    <div class="border p-3 rounded">
                        <form class="row g-3" action="/branch/edit" method="post">
                            <div class="col-12">
                                <label class="form-label">Branch Name</label>
                                <input type="text" name="name" value="<%= branchs.name %>" class="form-control"
                                    placeholder="Enter Branch Name">
                            </div>
                            <div class="col-12">
                                <label class="form-label">Course Year</label>
                                <input type="number" name="course_year" value="<%= branchs.course_year %>" class="form-control" placeholder="Enter Course End Year">
                            </div>
                            <div class="col-12">
                                <label class="form-label">Status</label>
                                <select name="status" class="form-select">
                                    <% if (branchs.status==true) { %>
                                        <option selected>Active</option>
                                        <option>Disabled</option>
                                        <% } else { %>
                                            <option>Active</option>
                                            <option selected>Disabled</option>
                                            <% } %>

                                </select>
                            </div>
                            <input type="text" value="<%= branchs._id %>" name="_id" hidden>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary px-4">Edit Branch</button>
                            </div>
                            <span id="message" class="text-danger lead">
                                <%= messageEdit %>
                            </span>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div><!--end row-->
    <%- include('../layouts/Footer'); %>

        <script>
            setTimeout(() => {
                document.getElementById("message").innerHTML = ""
            }, 3000);
        </script>